<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mdigius.uno.Controllers.StatsController">
   <children>
      <TableView fx:id="statsTable" layoutX="27.0" layoutY="120.0" prefHeight="77.0" prefWidth="347.0">
        <columns>
          <TableColumn fx:id="playerColumn" prefWidth="75.0" text="Player" />
          <TableColumn fx:id="winColumn" prefWidth="75.0" text="Wins" />
            <TableColumn fx:id="lossColumn" prefWidth="75.0" text="Losses" />
            <TableColumn fx:id="gamesColumn" prefWidth="75.0" text="Games Played" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <Button fx:id="closeBtn" layoutX="168.0" layoutY="243.0" mnemonicParsing="false" onAction="#onClose" prefHeight="26.0" prefWidth="65.0" text="Close" />
      <ImageView fitHeight="97.0" fitWidth="116.0" layoutX="142.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@imgs/icons/UnoLogo.png" />
         </image>
      </ImageView>
   </children>
</AnchorPane>
